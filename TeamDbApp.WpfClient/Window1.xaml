<Window x:Class="TeamDbApp.WpfClient.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamDbApp.WpfClient"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="FootballTeam" Height="70" Width="120" Click="Button_Click" />
        <Button Grid.Column="1" Content="Manager" Height="70" Width="120" Click="Button_Click_1" />
        <Button Grid.Column="2" Content="Player" Height="70" Width="120" Click="Button_Click_2" />



    </Grid>
</Window>
